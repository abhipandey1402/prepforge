{
  "manifest_version": 3,
  "name": "PrepForge LeetCode Sync",
  "version": "1.0",
  "description": "This extension helps PrepForge authorize your LeetCode submissions by safely retrieving your session token.",
  "permissions": ["cookies", "storage"],
  "host_permissions": ["https://leetcode.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png"
  },
  "externally_connectable": {
    "matches": [
      "https://prepforge.space/*",
      "https://www.prepforge.space/*",
      "http://localhost:*/*",
      "http://localhost:5173/*",
      "http://127.0.0.1:*/*"
      ]
  }
}
